<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First Row: Soil pH Level and Soil Moisture -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Soil pH Level Button -->
            <ImageButton
                android:id="@+id/button_ph"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_ph"
                android:contentDescription="Soil pH Level" />

            <!-- Soil Moisture Button -->
            <ImageButton
                android:id="@+id/button_moisture"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_moisture"
                android:contentDescription="Soil Moisture" />
        </LinearLayout>

        <!-- Second Row: Water Depth and Weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Water Depth Button -->
            <ImageButton
                android:id="@+id/button_water_depth"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_water"
                android:contentDescription="Water Depth" />

            <!-- Weather Button -->
            <ImageButton
                android:id="@+id/button_weather"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_weather"
                android:contentDescription="Weather" />
        </LinearLayout>


        <!-- Suggestion Text View -->
        <TextView
            android:id="@+id/text_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Suggestions"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_background"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconAboutUs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/warning_ic"
                android:layout_marginEnd="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH level too high!"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_background"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/warning_ic"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/text_water_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water level too low! \nCheck irrigation system."
                android:textSize="12sp"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_background"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/warning_ic"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/text_moisture_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moisture level critically low! \nWater the plants ASAP."
                android:textSize="12sp"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
