<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- User message (right aligned) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/userMessageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/user_message_bg"
            android:maxWidth="300dp" /> <!-- User message background -->

    </androidx.cardview.widget.CardView>

    <!-- System message (left aligned) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/systemMessageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/systemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/model_message_bg"
            android:maxWidth="300dp" /> <!-- System message background -->

    </androidx.cardview.widget.CardView>

</LinearLayout>
