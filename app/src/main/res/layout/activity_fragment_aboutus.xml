<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">


        <!-- Mission Statement Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Statement"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our mission is to empower rice farmers by providing tools that enhance productivity and sustainability."
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Vision Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We envision a future where every farmer has access to the resources they need to thrive."
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Core Values Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Core Values"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Sustainability\n• Innovation\n• Community"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Placeholder for Your Photo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/meg_profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg"
                android:clipToOutline="true" /> <!-- Ensure clipping is enabled -->

            <!-- Your Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meg Lopez \nProgrammer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="As the coder, I handle all the technical aspects of our app, ensuring smooth functionality and innovative features to help farmers."
                    android:textSize="16sp"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </LinearLayout>

        <!-- Team Member 2 - Danea (Designer) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Placeholder for Danea's Photo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/danea_profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg"
                android:clipToOutline="true"/>

            <!-- Danea's Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danea Ellery Zerudo \nUI/UX Designer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danea ensures our app is visually appealing and easy to use, crafting the user experience with creativity and care."
                    android:textSize="16sp"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </LinearLayout>

        <!-- Team Member 3 - Angel (Diagrams & Documents) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Placeholder for Angel's Photo -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/angel_profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg"
                android:clipToOutline="true" />

            <!-- Angel's Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angel Mae Endoma \nDocumentation &amp; Diagrams"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angel handles all the project documentation and creates the diagrams that guide the app's development and functionality."
                    android:textSize="16sp"
                    android:textColor="@color/text_color" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Our Story Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Story"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Born from a passion for agriculture, our app was developed to address the challenges rice farmers face daily. We recognized that traditional farming methods were insufficient to meet the growing global demand for rice, so we set out to create an innovative tool that empowers farmers to optimize their resources and improve their livelihoods."
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Key Features Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Water Level Monitoring\n• Soil pH Level Tracking\n• Weather Forecast Integration\n• Analytics for better decision-making"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Contact Us Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For questions, feedback, or support, reach out to us at: humayanph@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Stay Connected Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Connected"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow us on Facebook.com/HumayanPH"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Future Plans Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Future Plans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are continuously working to add new features such as real-time market price updates, crop disease detection using AI, and advanced farm analytics."
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_marginBottom="16dp" />

        <!-- Legal Information Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy | Terms of Service"
            android:textSize="16sp"
            android:textColor="@color/blue" />

    </LinearLayout>
</ScrollView>
