<resources>
    <!-- Custom Style for Weekday Text (Mon, Tue, etc.) -->
    <style name="WeekdayTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_green</item>
    </style>

    <!-- Custom Style for Date Text (Numbers in Calendar) -->
    <style name="DateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/nav_green</item>
    </style>

    <!-- Light application theme -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Light theme settings -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/lightBackgroundColor</item> <!-- Set light background color -->
    </style>

    <!-- Dark application theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Dark theme settings -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/black</item> <!-- Set dark background color -->
    </style>
    
</resources>
